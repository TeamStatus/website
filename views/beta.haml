- content_for(:head) do
  != stylesheet_tag "index"
  != stylesheet_tag "/public/css/main"
- content_for(:scripts) do
  !=javascript_tag('//cdnjs.cloudflare.com/ajax/libs/holder/2.0/holder.js')
  !=javascript_tag("js/main.js")
  :javascript
    mixpanel.track("Home");

  :javascript
    // <!-- Twitter share button -->
    !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");

  :javascript
    // <!-- Google Plus share button -->
      (function() {
        var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
        po.src = 'https://apis.google.com/js/plusone.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
      })();

    #fb-root

    :javascript
    // <!-- Facebook share button -->

    (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

.navbar-wrapper
  .container
    .navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "#"} TeamStatus.TV

.container.marketing

  #notices
    #success{style: "display: none;"} Success! Please check your inbox for a confirmation request.
    #error{style: "display: none;"} Sorry, MailChimp couldn't validate your email. Try again?
  %form.form-inline{action: "/signup"}
    %input#email.input-xlarge{name: "email", placeholder: "Email me about the project", type: "text"}/
    %button.btn.btn-success{type: "submit"} Subscribe
  %p.signup-terms
    You will receive only relevant, occasional messages, and your email
    will be stored only by TeamStatus.TV, ensuring prompt removal should you
    choose to unsubscribe.

  %ul.social-list-small
    %li
      %plusone{href: request.url, size: "medium"}
    %li
      %a.twitter-share-button{"data-text" => "I just signed up for this:", "data-url" => request.url, href: "https://twitter.com/share"} Tweet
    %li
      .fb-like{"data-font" => "arial", "data-href" => request.url, "data-layout" => "button_count", "data-send" => "false", "data-show-faces" => "false", "data-width" => "90"}

  %hr.featurette-divider/

  %footer
    %p.pull-right
      %a{href: "#"} Back to top
    %p
      \&#169; 2013 Team Status
      - if (twitter=ab_test("twitter", "none", "TeamStatusTV", "devonsteroids")) != "none"
        \&#183;
        %a{href: "http://twitter.com/#{twitter}"} Twitter
      \&#183;
      %a{href: "mailto:pawel@teamstatus.tv"} Contact us
